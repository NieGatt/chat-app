generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

enum UserType {
  STANDARD_AUTH
  GOOGLE_OAUTH20
}

model User {
  id           String   @id @unique @db.VarChar(36)
  pictureUrl   String?
  name         String   @db.VarChar(50)
  email        String   @unique @db.VarChar(50)
  password     String?  @db.VarChar(70)
  verified     Boolean  @default(false)
  type         UserType @default(STANDARD_AUTH)
  refreshToken String?  @unique
  createdAt    DateTime @default(now())

  receiver Message[] @relation("receiveRelation")
  sender   Message[] @relation("sendRelation")
  chats    Chat[]
}

enum StatusMSG {
  SEEN
  NOT_SEEN
}

model Message {
  id        Int       @id @default(autoincrement())
  text      String?   @db.Text
  fileUrl   String?   @db.Text
  status    StatusMSG @default(NOT_SEEN)
  createdAt DateTime  @default(now())

  receiver_id String @db.VarChar(36)
  receiver    User   @relation("receiveRelation", fields: [receiver_id], references: [id], onUpdate: Cascade)

  sender_id String @db.VarChar(36)
  sender    User   @relation("sendRelation", fields: [sender_id], references: [id], onUpdate: Cascade)

  chat_id String @db.VarChar(36)
  chat    Chat   @relation(fields: [chat_id], references: [id], onDelete: Cascade)
}

model Chat {
  id       String    @id @unique @default(uuid()) @db.VarChar(36)
  users    User[]
  messages Message[]
}